extends layout

block content
 h2.page-header Login
 p Please login below
 if errors
  each error, i in errors
   div.alert.alert-danger #{error.msg}
 form(method='post', action='/users/login')
  .form-group
   label User Id
   input.form-control(name='username', type='text', placeholder='Enter User Id')
  .form-group
   label Password
   input.form-control(name='password', type='password', placeholder='Enter Password')
  span
   a(href='/users/forgot-password') Forgot password
   br
   br
  input.btn.btn-primary(type='submit', name='submit',value='Login')