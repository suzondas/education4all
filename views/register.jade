extends layout

block content
 h1 Register
 if errors
  each error, i in errors
   div.alert.alert-danger #{error.msg}
 span.page-header Please register using the form below
 h2.page-header Individual
 form(method='post', action='/users/register', enctype='multipart/form-data')
  .form-group
    label Name
    input.form-control(name='name', type='text', placeholder='Enter Name' required='true')
    .form-group
    label Father's Name
    input.form-control(name='fatherName', type='text', placeholder="Enter Father's Name" required='true')
    .form-group
    label Mother's Name
    input.form-control(name='motherName', type='text', placeholder="Enter Mother's Name" required='true')
    .form-group
    label School/College Name
    input.form-control(name='institute', type='text', placeholder='Enter School/College Name' required='true')
  .row
    .col-sm-6.col-sm-6
     .form-group
      label Class
      input.form-control(name='class', type='text', placeholder='Enter Class' required='true')
    .col-sm-6.col-sm-6
     .form-group
      label Group
      select.form-control(name='group', type='text', placeholder='Select your Group' required='true')
        option(value='science') Science
        option(value='commerce') Commerce
        option(value='humanities') Humanities
  .row
    .col-sm-6.col-sm-6
     .form-group
      label Date of Birth
      #datepicker.input-group.date(data-date-format='mm-dd-yyyy')
       input.form-control(type='text', readonly='', name='dateOfBirth' required='true')
       span.input-group-addon
        i.glyphicon.glyphicon-calendar
    .col-sm-6.col-sm-6
     .form-group
      label Sex
      select.form-control(name='sex', type='text', placeholder='Select your Sex' required='true')
        option(value='male') Male
        option(value='female') Female
  .row
    .col-sm-6.col-sm-6
      .form-group
        label Mobile Number
        input.form-control(name='mobile', type='text', placeholder='Enter Mobile Number')
    .col-sm-6.col-sm-6
      .form-group
        label Phone
        input.form-control(name='phone', type='text', placeholder='Enter Phone Number')
  .form-group
    label Email
    input.form-control(name='email', type='text', placeholder='Enter Email Address' required='true')
  .form-group
    label Referrel ID
    input.form-control(name='referrer', type='text', placeholder='Enter Referrel ID' required='true')
  .form-group
    label Profile Image
    input.form-control(name='profileimage', type='file')
    .form-group
    label Password
    input.form-control(name='password', type='password', placeholder='Enter Password' required='true')
  .form-group
    label Confirm Password
    input.form-control(name='password2', type='password', placeholder='Confirm Password' required='true')
  h2.page-header Present Address
  .form-group
    label Address Line 1
    input.form-control(name='prAddLine1', type='text', placeholder='Enter Address Line 1')
  .form-group
    label Address Line 2
    input.form-control(name='prAddLine2', type='text', placeholder='Enter Address Line 2')
  .form-group
    label Address Line 3
    input.form-control(name='prAddLine3', type='text', placeholder='Enter Address Line 3')
  .form-group
    label Address Line 4
    input.form-control(name='prAddLine4', type='text', placeholder='Enter Address Line 4')
  .form-group
    label Country/Region
    select.form-control(id="region-cr" name='prCountryRegion' required='true'  onchange='changeBranchCR()')
      option(value='') -Select an item-
      each item in region
         option(value=item.item+'-'+item.local data-branch-cr=item.branch) #{item.item}
  .form-group
    label District/Town
    select.form-control(id="branch-cr" name='prDistTown' required='true')
  h2.page-header Permanent Address
  .form-group
    label Address Line 1
    input.form-control(name='prmAddLine1', type='text', placeholder='Enter Address Line 1')
  .form-group
    label Address Line 2
    input.form-control(name='prmAddLine2', type='text', placeholder='Enter Address Line 2')
  .form-group
    label Address Line 3
    input.form-control(name='prmAddLine3', type='text', placeholder='Enter Address Line 3')
  .form-group
    label Address Line 4
    input.form-control(name='prmAddLine4', type='text', placeholder='Enter Address Line 4')
  .form-group
    label Country/Region
    select.form-control(id="region-opt" name='prmCountryRegion' required='true'   onchange='changeBranchOPT()')
      option(value='') -Select an item-
        each item in region
           option(value=item.item+'-'+item.local data-branch-opt=item.branch) #{item.item}
  .form-group
    label District/Town
    select.form-control(id="branch-opt" name='prmDistTown' required='true')
  div(class="g-recaptcha" data-sitekey="6Ld5EEUUAAAAACTaqFnSxTVpGP4LgB6qWMa_FUNB")
  br
  input.btn.btn-primary(type='submit', name='submit', value='Register')
  span
   hr
  
